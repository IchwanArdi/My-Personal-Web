<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/Logo.png" type="image/png" />
    <link href="/src/output.css" rel="stylesheet" />
    <title>Blog | IchwanArdi</title>
    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />

    <style>
      body {
        font-family: 'Work Sans', sans-serif;
      }
    </style>
  </head>
  <body class="bg-slate-950">
    <!-- layout nav -->
    <%- include('layouts/nav2') %>

    <!-- Blog -->
    <section id="main" class="pt-10 relative">
      <% blogs.forEach((data, i) => { %>
      <div class="w-full h-auto flex justify-center p-5">
        <div class="flex flex-col md:flex-row w-full max-w-6xl text-white gap-x-8">
          <!-- Gambar -->
          <div class="w-full md:w-1/2">
            <a href="/mainBlog/<%= data.judul %>">
              <img src="/uploads/<%= data.gambar %>" alt="blog" class="w-full h-72 sm:h-48 md:h-72 object-cover" />
            </a>
          </div>
          <!-- Konten -->
          <div class="w-full md:w-1/2 flex flex-col justify-center min-[375px]:pt-5 md:pt-0">
            <span class="font-bold text-sm sm:text-xs"><%= data ? data.tanggal.toISOString().split('T')[0] : 'No Date' %></span>
            <p class="py-2 text-2xl sm:text-lg md:text-xl lg:text-5xl font-bold leading-snug"><%= data.judul %></p>
          </div>
        </div>
      </div>
      <% }) %>
    </section>

    <!-- Footer -->
    <section id="footer">
      <div class="container-fluid py-10 flex justify-center">
        <div class="text-lg font-semibold text-white">â’¸ 2025 Ichwan</div>
      </div>
    </section>

    <script src="src/script.js"></script>
  </body>
</html>
