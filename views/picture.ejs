<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/Logo.png" type="image/png" />
    <link href="/src/output.css" rel="stylesheet" />
    <title>Picture | IchwanArdi</title>
    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Grechen+Fuemen&family=Noto+Sans+Hanunoo&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />

    <style>
      body {
        font-family: 'Work Sans', sans-serif;
      }
    </style>
  </head>
  <body class="bg-slate-950">
    <!-- layout nav -->
    <%- include('layouts/nav2') %>

    <!-- Jumbotron -->
    <section id="jumbotron">
      <div class="container-fluid">
        <div class="w-full h-auto md:h-80">
          <img src="/images/6.jpg" alt="Gambar utama halaman" class="w-full h-full object-cover" />
        </div>
      </div>
    </section>

    <!-- main picture -->
    <section id="picture">
      <div class="mt-10 p-2 grid grid-cols-2 gap-2 md:grid-cols-4 md:p-4">
        <h2 class="text-xl font-semibold text-slate-700 md:col-start-4 md:row-start-2 md:flex">
          <span class="self-center text-white">Don't forget to follow my Instagram</span>
        </h2>
        <div class="text-lg font-bold text-slate-600 md:col-start-2 md:row-start-2 md:flex">
          <span class="self-end text-white">ichwan_ardi22</span>
        </div>

        <% images.forEach(image => { %>
        <div class="aspect-[4/3] rounded-lg md:aspect-[3/4] xl:aspect-[4/3] overflow-hidden group relative hover:scale-95 transition-all duration-500">
          <img src="<%= image.gambar %>" alt="picture" class="w-full h-full bg-cover bg-center absolute group-hover:scale-125 transition-all duration-500" />
        </div>
        <% }); %>
      </div>
    </section>

    <!-- Footer -->
    <section id="footer">
      <div class="container-fluid py-10 flex justify-center">
        <div class="text-lg font-semibold text-white">â’¸ 2025 Ichwan</div>
      </div>
    </section>

    <script src="/src/script.js"></script>
  </body>
</html>
